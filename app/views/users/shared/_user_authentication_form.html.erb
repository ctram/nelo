<div class="row justify-content-center">
  <div class="col-6">
    <h2 class="text-center"><%= heading %></h2>

    <% if flash.alert %>
      <div class="alert alert-danger" >
        <%= flash.alert %>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: url) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        
        <% if type == :registration && @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control", required: true %>
      </div>

      <% if type == :login && devise_mapping.rememberable? -%>
        <div class="form-check">
          <%= f.check_box :remember_me, class: "form-check-input form-control" %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <% if type == :registration %>
        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", required: true %>
        </div>
      <% end %>

      <%= f.submit buttonText, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
